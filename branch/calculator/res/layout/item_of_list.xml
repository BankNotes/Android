<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/name_calc" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/sumCred" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/percent" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/date_of_issue" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/redemtion_date" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/period" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/credit_type_tv" />

            <TextView
                style="@style/ItemTextHeader"
                android:text="@string/calc_type_tv" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_Calc"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/sum"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/percent"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/begin_date"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/end_date"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/period"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/credit_type"
                style="@style/ItemTextStyle" />

            <TextView
                android:id="@+id/calc_type"
                style="@style/ItemTextStyle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>