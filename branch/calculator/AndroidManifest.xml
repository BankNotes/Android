<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="calculator.ru"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="calculator.ru.activity.CalculatorMainActivityTabs"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoanCalculatorMainForm"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activity.Result"
            android:label="@string/title_activity_result" />
        <activity
            android:name=".CalcBySumPayumPay"
            android:label="@string/title_activity_main" />
        <activity android:name="calculator.ru.activity.ListOfCalcs" />

        <provider
            android:name="calculator.dbase.PaymentsContentProvider"
            android:authorities="calculator.dbase.paymentscontentprovider" />
        <provider
            android:name="calculator.dbase.InputDataContentProvider"
            android:authorities="calculator.dbase.inputdatacontentprovider" />
        <provider
            android:name="calculator.dbase.TotalsContentProvider"
            android:authorities="calculator.dbase.totalscontentprovider" />
        <provider
            android:name="calculator.dbase.ListOfLoanContentProvider"
            android:authorities="calculator.dbase.listofloancontentprovider" />
    </application>

</manifest>